            <Button x:Name="wykonaj_porade" Content="Wykonaj porade" HorizontalAlignment="Left" Margin="35,63,0,0" VerticalAlignment="Top" Width="99" Click="wykonaj_porade_Click"/>
            <Button x:Name="wykonaj_badanie" Content="Wykonaj badanie" HorizontalAlignment="Left" Margin="35,96,0,0" VerticalAlignment="Top" Width="99" Click="wykonaj_badanie_Click"/>
            <Button x:Name="generuj_raport" Content="Generuj raport" HorizontalAlignment="Left" Margin="35,159,0,0" VerticalAlignment="Top" Width="99" Click="generuj_raport_Click"/>
        </Grid>
        <Grid x:Name="GridUstawLekarza" HorizontalAlignment="Left" Height="260" Margin="165,10,0,0" VerticalAlignment="Top" Width="242" Visibility="Hidden">
