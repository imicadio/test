            <Label x:Name="label_Copy" Content="Specjalnosc:" HorizontalAlignment="Left" Margin="10,87,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="imieBox" HorizontalAlignment="Left" Height="22" Margin="10,36,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="222"/>
            <TextBox x:Name="specjalnoscBox" HorizontalAlignment="Left" Height="22" Margin="10,113,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="222"/>
            <Button x:Name="dodaj_lek" Content="Dodaj" HorizontalAlignment="Left" Height="23" Margin="143,188,0,0" VerticalAlignment="Top" Width="89" Click="dodaj_lek_Click"/>
        </Grid>
        <Grid x:Name="GridZapiszDo" HorizontalAlignment="Left" Height="227" Margin="178,43,0,0" VerticalAlignment="Top" Width="237" Visibility="Hidden">
            <Label x:Name="label1" Content="Imie i nazwisko pacjenta" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="25" Width="217"/>
            <TextBox x:Name="imie_pacjenta" HorizontalAlignment="Left" Height="23" Margin="24,35,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="203"/>
            <Label x:Name="label1_Copy" Content="Wiek" HorizontalAlignment="Left" Margin="10,74,0,0" VerticalAlignment="Top" Height="25" Width="217"/>
            <TextBox x:Name="wiek_pacjenta" HorizontalAlignment="Left" Height="23" Margin="24,104,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="203"/>
            <Label x:Name="label1_Copy1" Content="Choroba" HorizontalAlignment="Left" Margin="10,139,0,0" VerticalAlignment="Top" Height="25" Width="217"/>
            <TextBox x:Name="choroba_pacjenta" HorizontalAlignment="Left" Height="23" Margin="24,169,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="203"/>
            <Button x:Name="dodaj_doLekarza" Content="Dodaj" HorizontalAlignment="Left" Margin="140,204,0,0" VerticalAlignment="Top" Width="97" Height="23" Click="dodaj_doLekarza_Click"/>
        </Grid>
    </Grid>
</Window>
